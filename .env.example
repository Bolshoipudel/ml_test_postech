# LLM Assistant Configuration
# Copy this file to .env and fill in your values

# ========================================
# Application Settings
# ========================================
APP_NAME="LLM Assistant"
APP_VERSION="1.0.0"
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ========================================
# LLM Provider Settings
# ========================================
# Provider options: "openai" or "ollama"
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# OpenAI API Key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (required if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ========================================
# Embedding Configuration
# ========================================
# Provider options: "openai" or "sentence-transformers"
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002

# ========================================
# Vector Store Configuration
# ========================================
# Options: "chroma" or "faiss"
VECTOR_STORE=chroma
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=llm_assistant
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=llm_assistant_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Or use full DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://llm_assistant:secure_password@localhost:5432/llm_assistant_db

# ========================================
# Web Search Configuration
# ========================================
WEB_SEARCH_ENABLED=True
MAX_SEARCH_RESULTS=5

# Tavily API Key (recommended for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# ========================================
# Agent Configuration
# ========================================
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=30

# ========================================
# Guardrails Configuration
# ========================================
ENABLE_GUARDRAILS=True
ALLOWED_SQL_OPERATIONS=SELECT
