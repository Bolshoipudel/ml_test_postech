
APP_NAME="LLM Assistant"
APP_VERSION="1.0.0"
DEBUG=True
LOG_LEVEL=INFO

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

LLM_PROVIDER=openai
LLM_MODEL=gpt-4.1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

OPENAI_API_KEY=your_openai_api_key_here

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2


EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-large

VECTOR_STORE=chroma
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Database Configuration
# Options: "sqlite" or "postgresql"
DATABASE_TYPE=sqlite
SQLITE_DATABASE_PATH=./data/sql/team_mock.db

# PostgreSQL settings (only needed if DATABASE_TYPE=postgresql)
POSTGRES_USER=llm_assistant
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=llm_assistant_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432


WEB_SEARCH_ENABLED=True
MAX_SEARCH_RESULTS=5


TAVILY_API_KEY=your_tavily_api_key_here


AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=30

ENABLE_GUARDRAILS=True
ALLOWED_SQL_OPERATIONS=SELECT
